@model Report
@{
    ViewBag.Title = "AddandEdit";
}
<br />

@if (ViewBag.manager == "5")
{
    <div class="show-trainee">
        @using (Html.BeginForm())
        {
            if (Model != null)
            {
                @Html.HiddenFor(pp => pp.ReportId)
            }

            <div class="admin">
                <div class="form-group col-md-6">
                    @Html.LabelFor(pp => pp.DateOfStarting, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(pp => pp.DateOfStarting, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(pp => pp.DateOfStarting, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(pp => pp.DateOfEnding, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(pp => pp.DateOfEnding, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(pp => pp.DateOfEnding, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(ww => ww.SportId, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(pp => pp.SportId, ViewBag.sport as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(pp => pp.SportId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(ww => ww.CoachId, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(pp => pp.CoachId, ViewBag.coach as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(pp => pp.CoachId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(pp => pp.Price, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(pp => pp.Price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(pp => pp.Price, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(pp => pp.AdminId, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(pp => pp.AdminId, ViewBag.admin as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(pp => pp.AdminId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" style="margin-left: 241px; margin-top: 18px;" class=" submit  btn btn-outline-info  form-group" />
            </div>
        }

    </div>
}
else
{
    <div class=" danger alert alert-danger col-md-4" role="alert">
        <h5>Sorry, only manger can see this !</h5>
    </div>
}