@model IEnumerable<Admin>
@{
    ViewBag.Title = "Show_All_Admins";
}

<h2>@ViewBag.Title</h2>
<br />

@if (ViewBag.manager == "5")
{
    if (Model.Count() == 0)
    {
        <div class=" danger alert alert-danger col-md-4" role="alert">
            <h5>Sorry There Is No <strong>Admins</strong></h5>
        </div>
    }
    else
    {
    <div class="table-responsive">
        <table class=" mainTable  text-center table-dark table-striped table table-bordered">
            @*<table class="table table-hover table-striped table-bordered">*@
            <tr>
            <thead>
            <th>#@Html.DisplayNameFor(pp => pp.AdminId)</th>
            <th>FirstName</th>
            <th>@Html.DisplayNameFor(pp => pp.SecondName)</th>
            <th>@Html.DisplayNameFor(pp => pp.PhoneNumber)</th>
            <th>Mange</th>
            </thead>
            </tr>
            @foreach (var admin in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(pp => admin.AdminId)</td>
                    <td>@Html.DisplayFor(pp => admin.FirstName)</td>
                    <td>@Html.DisplayFor(pp => admin.SecondName)</td>
                    <td>@Html.DisplayFor(pp => admin.PhoneNumber)</td>
                    <td>
                        <a href="@Url.Action("EditAdmin", "Admin", new { id = admin.AdminId })" class="btn btn-success"><i class="fas fa-edit"></i> Edit</a>
                        <a href="@Url.Action("DeleteAdmin", "Admin", new { id = admin.AdminId })" onclick="return confirm('Are You Sure To Delete This Admin ')" class="btn btn-danger"><i class="fas fa-times"></i> Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
            }
        }

        else
        {
    <div class=" danger alert alert-danger col-md-4" role="alert">
        <h5>Sorry, only manger can see this !</h5>
    </div>
}

