@model Admin
@{
    ViewBag.Title = "AddandEdit";
}



<br />
@if (ViewBag.manager == "5")
{
    <div class="show-trainee">
        @using (Html.BeginForm())
        {
            if (Model != null)
            {
                @Html.HiddenFor(pp => pp.AdminId)
            }
            <div class="admin">
                <div class=" form-group col-md-6">
                    @Html.LabelFor(pp => pp.FirstName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(pp => pp.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(pp => pp.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(pp => pp.SecondName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(pp => pp.SecondName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(pp => pp.SecondName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(pp => pp.Password, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(pp => pp.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(pp => pp.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(pp => pp.ConfirmPassword, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(pp => pp.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(pp => pp.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(pp => pp.PhoneNumber, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(pp => pp.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(pp => pp.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <input type="submit" style="margin-left: 241px; margin-top: 18px;" class="  submit  form-group btn btn-outline-info" />
            </div>
        }

    </div>
}
else
{
    <div class=" danger alert alert-danger col-md-4" role="alert">
        <h5>Sorry, only manger can see this !</h5>
    </div>
}