@model Plan
@{
    ViewBag.Title = "AddandEdit";
}
    <div class="show-trainee">
        @using (Html.BeginForm())
        {
            if (Model != null)
            {
                @Html.HiddenFor(pp => pp.PlanId)
            }
        <div class="plan">
            <div class="form-group col-md-6">
                @Html.LabelFor(pp => pp.PlanName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(pp => pp.PlanName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(pp => pp.PlanName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(pp => pp.PlanClasses, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(pp => pp.PlanClasses, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(pp => pp.PlanClasses, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(pp => pp.PlanDescription, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(pp => pp.PlanDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(pp => pp.PlanDescription, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(pp => pp.PlanPrice, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(pp => pp.PlanPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(pp => pp.PlanPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <input type="submit" style="margin-left: 241px; margin-top: 18px;" value="submit" class=" submit  btn btn-outline-info form-group" />
        </div>
        }
    </div>