@model IEnumerable<Plan>
@{
    ViewBag.Title = "Show_All_Plans";
}

<h2>@ViewBag.Title</h2>

<br />
@if (Model.Count() == 0)
{
    <div class=" danger alert alert-danger col-md-4" role="alert">
        <h5>Sorry There Is No <strong>Plans</strong></h5>
    </div>
}
else
{
    <div class="table-responsive">
        <table class=" mainTable  text-center table-striped table-dark table table-bordered">
            @*<table class="table table-hover table-striped table-bordered">*@
            <tr>
            <thead>
            @*<th>#@Html.DisplayNameFor(pp => pp.PlanId)</th>*@
            <th>@Html.DisplayNameFor(pp => pp.PlanName)</th>
            <th>@Html.DisplayNameFor(pp => pp.PlanClasses)</th>
            <th>@Html.DisplayNameFor(pp => pp.PlanDescription)</th>
            <th>@Html.DisplayNameFor(pp => pp.PlanPrice)</th>
            <th>Mange</th>
            </thead>
            </tr>
            @foreach (var plan in Model)
            {
                <tr>
                    @*<td>@Html.DisplayFor(pp => plan.PlanId)</td>*@
                    <td>@Html.DisplayFor(pp => plan.PlanName)</td>
                    <td>@Html.DisplayFor(pp => plan.PlanClasses)</td>
                    <td>@Html.DisplayFor(pp => plan.PlanDescription)</td>
                    <td>@Html.DisplayFor(pp => plan.PlanPrice)</td>
                    <td>
                        <a href="@Url.Action("EditPlan", "Plan", new { id = plan.PlanId })" class="btn btn-success"><i class="fas fa-edit"></i> Edit</a>
                        <a href="@Url.Action("DeletePlan", "Plan", new { id = plan.PlanId })" onclick="return confirm('Are You Sure To Delete This Plan ?')" }) class="btn btn-danger"><i class="fas fa-times"></i> Delete</a>

                    </td>
                </tr>
            }

        </table>
    </div>
}

